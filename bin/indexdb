#!/bin/bash
#
#./bin/index
#
# Start, stop, restart, and check the status
# of the Index database,

# Stop on errors
set -Eeuo pipefail

# Command line options
usage() {
  echo "Usage: $0 (create|distroy|reset)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument
case $1 in
  "create")
    # Check if db already exists
    if [-f "./search/search/var/index.sqlite3"]
    then
        echo "Error: database already exists"
    else
        mkdir -p search/search/var/
        sqlite3 search/search/var/index.sqlite3 < search/search/sql/index.sql
    fi
    ;;
  "destroy")
    rm -f search/search/var/index.sqlite3
    ;;
  "reset")
    ./$0 destroy
    ./$0 create
    ;;
  *)
    usage
    exit 1
    ;;
esac