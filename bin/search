#!/bin/bash
#
#./bin/index
#
# Start, stop, restart, and check the status
# of Search servers.

# Stop on errors
set -Eeuo pipefail

# Command line options
usage() {
  echo "Usage: $0 (start|stop|status|restart)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument
case $1 in
  "start")
    # Stop if one or more Index servers is already running
    if [ pgrep -f "flask run --host 0.0.0.0 --port 9000" ] ||
       [ pgrep -f "flask run --host 0.0.0.0 --port 9001" ] ||
       [ pgrep -f "flask run --host 0.0.0.0 --port 9002" ]
    then
        echo "Error: index server is already running"
        exit 1
    fi

    # Check that index servers are running
    if [ ./bin/index status ]
    then
        echo "Error: index server is not running"
        echo "Try ./bin/index start"
    # Check that search server is not already running
    elif [ ]
        echo "Error: search server is already running"
    else
        echo "Error: can't find search database search/search/var/index.sqlite3"
        echo "Try: ./bin/indexdb create"
        exit 1
    fi
    ;;
  "stop")
    echo "stopping search server ..."
    pkill -f 'flask run --host 0.0.0.0 --port 8000' || true
    ;;
  "status")
    if [ pgrep -f "flask run --host 0.0.0.0 --port 8000" ]
    then
        echo "search server running"
    else
        echo "search server stopped"
    fi
  "restart")
    ./$0 stop
    ./$0 start
    ;;
  *)
    usage
    exit 1
    ;;
esac